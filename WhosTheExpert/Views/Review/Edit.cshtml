@model WhosTheExpert.Models.Review

@{
    ViewData["Title"] = "Edit";
}

<h2>Update</h2>
<hr />

<form asp-action="Edit">
    <div class="row form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="FromName"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="FromName" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="ToName"></label>
                </div>
                <div class="col-sm-6">
                    <input asp-for="ToName" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="WriteUp"></label>
                </div>
                <div class="col-sm-6">
                    <input asp-for="WriteUp" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Score"></label>
                </div>
                <div class="col-sm-6">
                    <input asp-for="Score" class="form-control" />
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-sm btn-success" />
                <input type="submit" asp-Action="Index" value="Back to List" class="btn btn-sm btn-default" />
            </div>
        </div>

</form>

